<ContentPage>
    <CollectionView VerticalOptions="@LayoutOptions.FillAndExpand"
                    BackgroundColor="@Color.LightCoral"
                    @ref="animalCollection">
        <ItemTemplate>
            <AnimalTemplate Animal="@((Animal)context)" />
        </ItemTemplate>
    </CollectionView>
</ContentPage>

@code
{
    Microsoft.Blazor.Native.Elements.CollectionView animalCollection;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            animalCollection.SetItemsSource(BlazorNativeXaminals.Data.CatData.Cats);
        }
    }
}
